<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Zealand"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booking"
        android:textSize="35sp"
        android:background="@color/zealandgul"
        android:gravity="center" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Purpose"
        android:textSize="25sp"
        android:id="@+id/purposeText"
        android:inputType="text" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Date"
        android:layout_gravity="center"
        android:id="@+id/dateButton"
        android:textColor="@color/colorAccent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateChosen"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Time From"
        android:layout_gravity="center"
        android:id="@+id/fromTimeButton"
        android:textColor="@color/colorAccent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeFromChosen"
        android:layout_gravity="center"/>


    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Time To"
        android:layout_gravity="center"
        android:id="@+id/toTimeButton"
        android:textColor="@color/colorAccent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeToChosen"
        android:layout_gravity="center"/>


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Book"
        android:backgroundTint="#095c0d"
        android:layout_gravity="center"
        android:id="@+id/bookButton"
        android:textColor="#ffffff" />

</LinearLayout>
