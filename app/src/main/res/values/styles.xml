<resources>

    <!-- Base application theme. -->
    <style name="Zealand" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/zealandgul</item>
        <item name="colorPrimaryDark">@color/zealandgul</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#000000</item>
    </style>


    <!-- Set parent theme as app theme. -->
    <style name="DialogTheme" parent="Zealand">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>
